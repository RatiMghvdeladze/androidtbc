<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddNewCardFragment">


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnBackButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_back_button"
        android:elevation="10dp"
        android:scaleType="center"
        android:src="@drawable/icon_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAddNewCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_new_card"
        android:textColor="#121420"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="@font/poppins_semibold"
        app:layout_constraintBottom_toBottomOf="@id/btnBackButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBackButton" />

    <include
        android:id="@+id/ivCard"
        layout="@layout/item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="39dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAddNewCard" />
    <RadioGroup
        android:id="@+id/radioGroupCardType"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/ivCard"
        app:layout_constraintTop_toBottomOf="@id/ivCard"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radioMastercard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mastercard"
            android:textColor="#595555"
            android:checked="true"
            android:fontFamily="@font/poppins"
            android:layout_marginEnd="16dp"/>

        <RadioButton
            android:id="@+id/radioVisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#595555"
            android:fontFamily="@font/poppins"
            android:text="@string/visa"/>
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCardholderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins"
        android:text="@string/cardholder_name_lowercase"
        android:textColor="#595555"
        app:layout_constraintStart_toStartOf="@id/radioGroupCardType"
        app:layout_constraintTop_toBottomOf="@id/radioGroupCardType" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etCardholderName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#172B4D"
        android:textColorHint="#BD8F8F"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/bg_et_in_add_new_card"
        android:hint="@string/full_name"
        android:inputType="text"
        android:paddingHorizontal="16dp"
        android:fontFamily="@font/poppins"
        android:paddingVertical="11dp"
        app:layout_constraintStart_toStartOf="@id/tvCardholderName"
        app:layout_constraintTop_toBottomOf="@id/tvCardholderName" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/poppins"
        android:textColor="#595555"
        android:text="@string/card_number"
        app:layout_constraintStart_toStartOf="@id/tvCardholderName"
        app:layout_constraintTop_toBottomOf="@id/etCardholderName" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:textColor="#172B4D"
        android:layout_marginTop="11dp"
        android:background="@drawable/bg_et_in_add_new_card"
        android:hint="@string/card_number"
        android:textColorHint="#BD8F8F"
        android:inputType="number"
        android:maxLength="16"
        android:fontFamily="@font/poppins"
        android:paddingHorizontal="16dp"
        android:paddingVertical="11dp"
        app:layout_constraintStart_toStartOf="@id/tvCardNumber"
        app:layout_constraintTop_toBottomOf="@id/tvCardNumber" />



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvExpires"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expires"
        android:textSize="14sp"
        android:textColor="#595555"
        android:fontFamily="@font/poppins"
        app:layout_constraintStart_toStartOf="@id/tvCardNumber"
        app:layout_constraintTop_toBottomOf="@id/etCardNumber"
        android:layout_marginTop="29dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etExpires"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_et_in_add_new_card"
        android:hint="@string/mm_yy"
        android:textColorHint="#BD8F8F"
        android:inputType="date"
        android:textColor="#172B4D"
        android:maxLength="5"
        android:paddingHorizontal="16dp"
        android:paddingVertical="11dp"
        app:layout_constraintStart_toStartOf="@id/tvExpires"
        app:layout_constraintTop_toBottomOf="@id/tvExpires"
        android:layout_marginTop="11dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCVV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="@string/cvv"
        android:textSize="14sp"
        android:textColor="#595555"
        app:layout_constraintBottom_toBottomOf="@+id/tvExpires"
        app:layout_constraintStart_toStartOf="@id/etCVV"
        app:layout_constraintTop_toTopOf="@id/tvExpires" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etCVV"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_et_in_add_new_card"
        android:hint="***"
        android:inputType="number"
        android:textColorHint="#BD8F8F"
        android:maxLength="3"
        android:paddingHorizontal="16dp"
        android:paddingVertical="11dp"
        android:textColor="#172B4D"
        app:layout_constraintBottom_toBottomOf="@+id/etExpires"
        app:layout_constraintEnd_toEndOf="@+id/ivCard"
        app:layout_constraintTop_toTopOf="@+id/etExpires" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_add_card"
        android:fontFamily="sans-serif"
        android:paddingHorizontal="64dp"
        android:paddingVertical="13dp"
        android:text="@string/add_card"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etExpires" />





</androidx.constraintlayout.widget.ConstraintLayout>