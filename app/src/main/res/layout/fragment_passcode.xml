<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        tools:context=".ui.passcode.PasscodeFragment">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSecurityScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/security_screen"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/poppins_semibold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEnterYourPasscode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/enter_your_passcode"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="@id/tvSecurityScreen"
            app:layout_constraintStart_toStartOf="@id/tvSecurityScreen"
            app:layout_constraintTop_toBottomOf="@id/tvSecurityScreen" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPasscodeCircles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/tvEnterYourPasscode"
            app:layout_constraintStart_toStartOf="@id/tvEnterYourPasscode"
            app:layout_constraintTop_toBottomOf="@id/tvEnterYourPasscode" />

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginHorizontal="11dp"
            app:columnCount="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvPasscodeCircles"
            app:rowCount="4">



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnOne1"
                style="@style/DigitsStyle"
                android:text="@string/_1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTwo2"
                style="@style/DigitsStyle"
                android:text="@string/_2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnThree3"
                style="@style/DigitsStyle"
                android:text="@string/_3" />




            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFour4"
                style="@style/DigitsStyle"
                android:text="@string/_4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFive5"
                style="@style/DigitsStyle"
                android:text="@string/_5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSix6"
                style="@style/DigitsStyle"
                android:text="@string/_6" />



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSeven7"
                style="@style/DigitsStyle"
                android:text="@string/_7" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEight8"
                style="@style/DigitsStyle"
                android:text="@string/_8" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNine9"
                style="@style/DigitsStyle"
                android:text="@string/_9" />



            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnFingerprint"
                style="@style/DigitsStyle"
                android:src="@drawable/ic_fingerprint" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnZero0"
                style="@style/DigitsStyle"
                android:text="@string/_0" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnDelete"
                style="@style/DigitsStyle"
                android:src="@drawable/ic_backspace" />


        </androidx.gridlayout.widget.GridLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins"
            android:text="@string/forgot_password"
            android:textAllCaps="false"
            android:textColor="@color/forgot_password"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gridNumbers"
            app:layout_constraintVertical_bias="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>