<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LogInFragment">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/photo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLetsYouIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/let_s_you_in"
        android:textColor="@color/black"
        android:textSize="45sp"
        android:textStyle="bold"
        app:fontFamily="@font/roboto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinueFB"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLetsYouIn" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/tvIconContainerFB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/btnContinueFB"
        app:layout_constraintStart_toStartOf="@id/btnContinueFB"
        app:layout_constraintBottom_toBottomOf="@id/btnContinueFB"
        app:layout_constraintTop_toTopOf="@id/btnContinueFB"
        android:elevation="6dp"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconFB"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/icon_facebook" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvContinueFB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/continue_with_facebook"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:textStyle="bold"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>








    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinueGoogle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnContinueFB" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/tvIconContainerGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/btnContinueGoogle"
        app:layout_constraintStart_toStartOf="@id/btnContinueGoogle"
        app:layout_constraintBottom_toBottomOf="@id/btnContinueGoogle"
        app:layout_constraintTop_toTopOf="@id/btnContinueGoogle"
        android:elevation="6dp"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconGoogle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/icon_google" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvContinueGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/continue_with_google"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>









    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinueApple"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnContinueGoogle" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/tvIconContainerApple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/btnContinueApple"
        app:layout_constraintStart_toStartOf="@id/btnContinueApple"
        app:layout_constraintBottom_toBottomOf="@id/btnContinueApple"
        app:layout_constraintTop_toTopOf="@id/btnContinueApple"
        android:elevation="6dp"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconApple"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/icon_apple" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvContinueApple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/continue_with_apple"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>


    <com.google.android.material.divider.MaterialDivider
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvOr"
        app:layout_constraintTop_toTopOf="@id/tvOr"
        app:layout_constraintBottom_toBottomOf="@id/tvOr"

        />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toEndOf="@id/tvOr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvOr"
        app:layout_constraintTop_toTopOf="@id/tvOr"
        android:layout_marginStart="10dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/or"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnContinueApple" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignInWithPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/cornered_button"
        android:text="@string/sign_in_with_password"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOr" />


</androidx.constraintlayout.widget.ConstraintLayout>
